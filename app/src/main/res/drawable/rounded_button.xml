<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3B3B3" /> <!-- Warna shadow -->
            <corners android:radius="15dp" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>

    <!-- Button layer -->
    <item android:left="3dp" android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#E5E5E5" /> <!-- Warna button -->
            <corners android:radius="15dp" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>

</layer-list>
